{
    "name": "mediact/dependency-guard",
    "description": "Static production dependency analysis.",
    "type": "composer-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "MediaCT",
            "email": "info@mediact.nl"
        },
        {
            "name": "Jan-Marten de Boer",
            "role": "developer"
        },
        {
            "name": "Ashoka de Wit",
            "role": "developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2",
        "composer/composer": "^1.6",
        "composer-plugin-api": "^1.1",
        "nikic/php-parser": "^3.0"
    },
    "require-dev": {
        "mediact/testing-suite": "@stable",
        "phpro/grumphp": "~0.1"
    },
    "suggest": {
        "phpro/grumphp": "To run DependencyGuard as GrumPHP Task."
    },
    "autoload": {
        "psr-4": {
            "Mediact\\DependencyGuard\\": "src"
        }
    },
    "bin": [
        "bin/dependency-guard"
    ],
    "extra": {
        "grumphp": {
            "config-default-path": "vendor/mediact/testing-suite/config/default/grumphp.yml"
        },
        "class": "Mediact\\DependencyGuard\\Composer\\Plugin"
    },
    "archive": {
        "exclude": [
            "/.gitignore",
            "/phpunit.xml",
            "/phpmd.xml",
            "/phpstan.neon",
            "/phpcs.xml",
            "/bitbucket-pipelines.yml"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
